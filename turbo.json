{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"]
    },
    "web#build": {
      "dependsOn": [
        "^build",
        "$DATABASE_URL",
        "$NEXTAUTH_SECRET",
        "$NEXTAUTH_URL",
        "$GITHUB_ID",
        "$GITHUB_SECRET",
        "$GOOGLE_ID",
        "$GOOGLE_SECRET"
      ],
      "outputs": [".next/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "lint": {
      "outputs": []
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"],
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  },
  "globalDependencies": ["tsconfig.json", ".env.*"]
}
